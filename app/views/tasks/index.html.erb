<h1>My tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li><%= check_box_tag('completed', 'completed', task.completed, {disabled: true}) %><%=  link_to task.title, task_path(task.id) %>
      <%= link_to 'Delete', task_path(task), method: :delete, data: {confirm: "Are you sure?"} %></li>
  <% end %>
</ul>

<%= link_to 'Add a task', new_path %>
